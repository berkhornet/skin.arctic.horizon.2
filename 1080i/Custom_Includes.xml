<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- START Expressions and Variables for PVR EPG and Skin Backgrounds -->
		
	<!-- PVR002 & PVR005 - Expressions for Channel Icon variable (ImagePVREPGIcon) and EPG Artwork variable (ImagePVRArtwork) -->
	<expression name="Standard_Channel">Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,499)</expression>
	<expression name="Live_Football_Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,501) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,592)</expression>
	<expression name="Live_EPL_Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,501) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,520)</expression>
	<expression name="Live_EFLC_Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,521) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,544)</expression>
	<expression name="Live_EFL1_Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,545) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,568)</expression>
	<expression name="Live_EFL2_Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,569) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,592)</expression>
	<expression name="Live_Football_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,699)</expression>
	<expression name="Live_EPL_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EPL ")</expression>
	<expression name="Live_EFLC_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EFL ") + String.Contains(ListItem.ChannelName,"(CH)")</expression>
	<expression name="Live_EFL1_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EFL ") + String.Contains(ListItem.ChannelName,"(L1)")</expression>
	<expression name="Live_EFL2_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EFL ") + String.Contains(ListItem.ChannelName,"(L2)")</expression>
	<expression name="Live_SPFL_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE: SPFL ")</expression>
	<expression name="Live_NoMatch_EPL_EFL_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.EndsWith(ListItem.ChannelName,":")</expression>
	<expression name="Live_NoMatch_SPFL_FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE: SPFL ") + [String.EndsWith(ListItem.ChannelName,"01") | String.EndsWith(ListItem.ChannelName,"02") | String.EndsWith(ListItem.ChannelName,"03") | String.EndsWith(ListItem.ChannelName,"04") | String.EndsWith(ListItem.ChannelName,"05") | String.EndsWith(ListItem.ChannelName,"06")]</expression>
	
	<!-- PVR002 - Channel Icon variable -->
	<variable name="ImagePVREPGIcon">
		<value condition="$EXP[Standard_Channel]">$INFO[ListItem.Icon]</value>				
		<value condition="$EXP[Live_EPL_Anova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EPL.png</value>
		<value condition="$EXP[Live_EFLC_Anova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL C.png</value>
		<value condition="$EXP[Live_EFL1_Anova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L1.png</value>
		<value condition="$EXP[Live_EFL2_Anova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L2.png</value>
		<value condition="$EXP[Live_EPL_FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EPL.png</value>
		<value condition="$EXP[Live_EFLC_FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL C.png</value>
		<value condition="$EXP[Live_EFL1_FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L1.png</value>
		<value condition="$EXP[Live_EFL2_FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L2.png</value>
		<value condition="$EXP[Live_SPFL_FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE SPFL.png</value>
		<value condition="$EXP[Live_Football_FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL.png</value>		
		<value>$INFO[ListItem.Icon]</value>
	</variable>
	
	<!-- PVR005 - PVR EPG Artwork variable -->	
	<variable name="ImagePVRArtwork">
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + String.IsEqual(ListItem.Label,No information available)">$INFO[ListItem.Icon]</value>
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Thumb))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Thumb)]</value>
		<!-- Live Football Artwork -->
		<value condition="$EXP[Live_Football_Anova] + !Player.HasMedia">$INFO[ListItem.Icon]</value>			
		<value condition="$EXP[Live_EPL_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EPL.jpg</value>
		<value condition="$EXP[Live_EFLC_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL1_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL2_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>	
		<value condition="$EXP[Live_EPL_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EPL.jpg</value>
		<value condition="$EXP[Live_EFLC_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL1_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL2_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_SPFL_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\SPFL.jpg</value>	
		<value condition="$EXP[Live_Football_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>		
		<value condition="!Player.HasMedia">$INFO[ListItem.Icon]</value>
	</variable>
	
	<!-- ImagePVRArtwork_Test not in use -->
	<variable name="ImagePVRArtwork_Test">	
		<!-- Standard Channel Preference 1 - ClearArt -->
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(TMDbHelper.ListItem.ClearArt)) + String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.ClearArt))">$INFO[Window(Home).Property(TMDbHelper.ListItem.ClearArt)]</value>
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.ClearArt))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.ClearArt)]</value>
		<!-- Standard Channel Preference 2 - ClearLogo -->
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(TMDbHelper.ListItem.ClearLogo)) + String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.ClearLogo))">$INFO[Window(Home).Property(TMDbHelper.ListItem.ClearLogo)]</value>
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.ClearLogo))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.ClearLogo)]</value>
		<!-- Standard Channel Preference 3 - Landscape -->
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(TMDbHelper.ListItem.Landscape)) + String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Landscape))">$INFO[Window(Home).Property(TMDbHelper.ListItem.Landscape)]</value>
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Landscape))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Landscape)]</value>
		<!-- Standard Channel Preference 4 - Fanart -->
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(TMDbHelper.ListItem.Fanart)) + String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Fanart))">$INFO[Window(Home).Property(TMDbHelper.ListItem.Fanart)]</value>
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Fanart))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Fanart)]</value>
		<!-- Standard Channel Preference 5 - Thumb -->
		<value condition="$EXP[Standard_Channel] + !Player.HasMedia + !String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Art.Thumb))">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Thumb)]</value>
		<!-- Live Football Artwork -->
		<value condition="$EXP[Live_Football_Anova] + !Player.HasMedia">$INFO[ListItem.Icon]</value>			
		<value condition="$EXP[Live_EPL_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EPL.jpg</value>
		<value condition="$EXP[Live_EFLC_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL1_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL2_Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>	
		<value condition="$EXP[Live_EPL_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EPL.jpg</value>
		<value condition="$EXP[Live_EFLC_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL1_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_EFL2_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[Live_SPFL_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\SPFL.jpg</value>	
		<value condition="$EXP[Live_Football_FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>		
		<value condition="!Player.HasMedia">$INFO[ListItem.Icon]</value>
	</variable>
	
	<!-- PVR003 - Expressions and variables for Channel Resolution Icon variable (ImageChannelResolutionIcon) -->
	<expression name="FHD_Channel">String.Contains(ListItem.ChannelName," FHD")</expression>
	<expression name="HD_Channel">String.Contains(ListItem.ChannelName," HD")</expression>
	<expression name="SD_Channel">String.Contains(ListItem.ChannelName," SD")</expression>
	<!-- Channel Resolution Icon variable -->
	<variable name="ImagePVRChannelResolutionIcon">
		<value condition="$EXP[FHD_Channel]">special://userdata/customisations\Skin Customisations\PVR\resolution flags\fhd.png</value>
		<value condition="$EXP[HD_Channel]">special://userdata/customisations\Skin Customisations\PVR\resolution flags\hd.png</value>
		<value condition="$EXP[SD_Channel]">special://userdata/customisations\Skin Customisations\PVR\resolution flags\sd.png</value>
		<value></value>
	</variable>
	
	<!-- PVR013 - Variables for Live Football information and plot -->
	<!-- For live football channels, display channel name instead of program information -->
	<!-- PVR EPG Program Info variable -->
	<variable name="TextPVREPGProgramInfo">
		<value condition="$EXP[Standard_Channel]">$INFO[ListItem.Label]</value>
		<value condition="$EXP[Live_Football_Anova]">$INFO[ListItem.ChannelName] - Live Matches</value>
		<value condition="$EXP[Live_NoMatch_EPL_EFL_FHNatho]">$INFO[ListItem.ChannelName] No Match Scheduled</value>
		<value condition="$EXP[Live_NoMatch_SPFL_FHNatho]">$INFO[ListItem.ChannelName] No Match Scheduled</value>
		<value condition="$EXP[Live_EPL_FHNatho]">$INFO[ListItem.ChannelName]</value>
		<value condition="$EXP[Live_EFLC_FHNatho]">$INFO[ListItem.ChannelName]</value>
		<value condition="$EXP[Live_EFL1_FHNatho]">$INFO[ListItem.ChannelName]</value>
		<value condition="$EXP[Live_EFL2_FHNatho]">$INFO[ListItem.ChannelName]</value>
		<value condition="$EXP[Live_SPFL_FHNatho]">$INFO[ListItem.ChannelName]</value>		
		<value>$INFO[ListItem.Label]</value>
	</variable>
	<!-- PVR EPG Program Plot variable -->
	<variable name="TextPVREPGProgramPlot">
		<value condition="$EXP[Standard_Channel]">$VAR[Label_Plot]</value>
		<value condition="$EXP[Live_EPL_Anova]">Live match from the English Premier League featuring $INFO[ListItem.ChannelName] when available.</value>
		<value condition="$EXP[Live_EFLC_Anova]">Live match from the English Football League Championship featuring $INFO[ListItem.ChannelName] when available.</value>
		<value condition="$EXP[Live_EFL1_Anova]">Live match from the English Football League 1 featuring $INFO[ListItem.ChannelName] when available.</value>
		<value condition="$EXP[Live_EFL2_Anova]">Live match from the English Football League 2 featuring $INFO[ListItem.ChannelName] when available.</value>
		<value condition="$EXP[Live_NoMatch_EPL_EFL_FHNatho]">No match scheduled on this channel.</value>
		<value condition="$EXP[Live_NoMatch_SPFL_FHNatho]">No match scheduled on this channel.</value>
		<value condition="$EXP[Live_EPL_FHNatho]">Live match from the English Premier League.</value>
		<value condition="$EXP[Live_EFLC_FHNatho]">Live match from the English Football League (Championship).</value>
		<value condition="$EXP[Live_EFL1_FHNatho]">Live match from the English Football League (League 1).</value>
		<value condition="$EXP[Live_EFL2_FHNatho]">Live match from the English Football League (League 2).</value>
		<value condition="$EXP[Live_SPFL_FHNatho]">Live match from the Scottish Professional Football League.</value>
		<value condition="$EXP[Live_Football_FHNatho]">Live match from the English Football League.</value>
		<value>$INFO[ListItem.Label]</value>
	</variable>
	
	<!-- PVR009 - Expressions and variable for Channel provider icon -->
	<expression name="FHNatho_Channel">Integer.IsLess(ListItem.ChannelNumberLabel,200) | Integer.IsGreater(ListItem.ChannelNumberLabel,599) </expression>
	<expression name="Anova_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,201) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,599) </expression>
	<expression name="BBC_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,401) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,410) </expression>
	<expression name="ITV_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,411) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,420) </expression>
	<expression name="STV_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,421) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,430) </expression>
	<expression name="All4_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,431) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,440) </expression>
	<expression name="UKTVPlay_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,441) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,450) </expression>
	<expression name="CUTV_Channel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,451) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,499) </expression>
	<variable name="ImagePVRProviderIcon">
		<value condition="$EXP[FHNatho_Channel]">special://userdata/customisations\Addon Icons\FHNatho.png</value>
		<value condition="$EXP[BBC_Channel]">special://userdata/customisations\Addon Icons\BBC iPlayer Icon v2.png</value>
		<value condition="$EXP[ITV_Channel]">special://userdata/customisations\Addon Icons\ITV Hub Icon v2.png</value>
		<value condition="$EXP[STV_Channel]">special://userdata/customisations\Addon Icons\STV Icon v2.png</value>
		<value condition="$EXP[All4_Channel]">special://userdata/customisations\Addon Icons\All4 Icon v2.png</value>
