		<value condition="$EXP[Anova_Channel]">special://userdata/customisations\Addon Icons\Anova.png</value>
		<value>special://userdata/customisations\Skin Customisations\PVR\provider icons\NoProvider.png</value>
	</variable>
	
	<!-- SKIN BACKGROUNDS EXPRESSIONS & VARIABLES -->
	<!-- Expressions for Skin Background variable (ImageSkinBackground) -->
	<!-- HOME Window -->
	<expression name="Exp_HomeWindow">Window.IsVisible(Home) | Window.IsVisible(11114)</expression>
	
	<!-- PVR Windows -->
	<!-- MyPVRChannels.xml (10700), MyPVRRecordings.xml (10701), MyPVRGuide.xml (10702), MyPVRGuide.xml (10703), MyPVRSearch.xml (10704) -->
	<expression name="Exp_PVRWindow">Window.IsVisible(10700) | Window.IsVisible(10701) | Window.IsVisible(10702) | Window.IsVisible(10703) | Window.IsVisible(10704)</expression>
	
	<!-- ON DEMAND Windows -->
	<!-- On Demand (Tested by looking for "plugin") -->
	<expression name="Exp_OnDemandWindow_iPlayer">Window.IsVisible(10025) + String.Contains(Container.FolderPath,iplayerwww)</expression>
	<expression name="Exp_OnDemandWindow">Window.IsVisible(10025) + String.Contains(Container.FolderPath,plugin)</expression>
	
	<!-- VIDEO Windows -->
	<!-- MyVideoNav.xml (10025), MyPlaylist.xml (10028) -->
	<expression name="Exp_VideoWindow">Window.IsVisible(10025) | Window.IsVisible(10028)</expression>
	
	<!-- MUSIC Windows -->
	<!-- MyMusicNav.xml (10502), MyMusicPlaylistEditor.xml (10503), MyPlayList.xml (10500) -->
	<expression name="Exp_MusicWindow">Window.IsVisible(10502) | Window.IsVisible(MyMusicPlaylistEditor) | Window.IsVisible(10500)</expression>
	
	<!-- WEATHER Windows -->
	<expression name="Exp_WeatherWindow">Window.IsVisible(MyWeather)</expression>
	
	<!-- SYSTEM / PROGRAM Windows -->
	<!-- MyPrograms.xml (10001), FileManager.xml (10003), Settings.xml (10004), SettingsSystemInfo.xml (10007), SettingsSystemInfo.xml (10016) -->
	<!-- SettingsCategory.xml (10018, 10021, 10022, 10030, 10031, 10032, 10034, 10035), AddonBrowser.xml (10040), EventLog.xml (10050) -->
	<!-- FileBrowser.xml (10026) -->
	<expression name="Exp_SystemWindow">Window.IsVisible(10001) | Window.IsVisible(10003) | Window.IsVisible(10004) | Window.IsVisible(10007) | Window.IsVisible(10016) | Window.IsVisible(10018) | Window.IsVisible(10021) | Window.IsVisible(10022) | Window.IsVisible(10030) | Window.IsVisible(10031) | Window.IsVisible(10032) | Window.IsVisible(10034) | Window.IsVisible(10035) | Window.IsVisible(10040) | Window.IsVisible(10050) | Window.IsVisible(10126)</expression>

	<!-- EXPANDED HOME Windows -->
	<!-- Expanded conditions to make Home background dynamic depending on selected Menu item -->
	<expression name="Exp_HomeWindow_PVR">Window.IsVisible(Home) + Integer.IsEqual(Container(300).Position,0)</expression>
	<expression name="Exp_HomeWindow_OnDemand">Window.IsVisible(Home) + Integer.IsEqual(Container(300).Position,1)</expression>
	<expression name="Exp_HomeWindow_Videos">Window.IsVisible(Home) + Integer.IsEqual(Container(300).Position,2)</expression>
	<expression name="Exp_HomeWindow_Music">Window.IsVisible(Home) + Integer.IsEqual(Container(300).Position,3)</expression>
	<expression name="Exp_HomeWindow_Weather">Window.IsVisible(Home) + Integer.IsEqual(Container(300).Position,4)</expression>

	<!-- Skin Background variable -->
	<variable name="ImageSkinBackground">
		<value condition="$EXP[Exp_HomeWindow_PVR]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\PVR.png</value>
		<value condition="$EXP[Exp_HomeWindow_OnDemand]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\On Demand.jpg</value>
		<value condition="String.Contains(Container.Folderpath,watchlist)">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\On Demand.jpg</value>
		<value condition="$EXP[Exp_HomeWindow_Videos]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Video.jpg</value>
		<value condition="$EXP[Exp_HomeWindow_Music]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Music.jpg</value>
		<value condition="$EXP[Exp_HomeWindow_Weather]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Weather.jpg</value>	
		<value condition="$EXP[Exp_HomeWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Home.jpg</value>
		<value condition="$EXP[Exp_PVRWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\PVR.png</value>
		<value condition="$EXP[Exp_OnDemandWindow_iPlayer]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\iPlayer.png</value>	
		<value condition="$EXP[Exp_OnDemandWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\On Demand.jpg</value>	
		<value condition="$EXP[Exp_VideoWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Video.jpg</value>
		<value condition="$EXP[Exp_MusicWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Music.jpg</value>
		<value condition="$EXP[Exp_WeatherWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Weather.jpg</value>
		<value condition="$EXP[Exp_SystemWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\System.png</value>
		<value>special://userdata/customisations\Skin Images\AH2 Backgrounds\Fallback.jpg</value>
	</variable>
	<!-- END Expressions and Variables for PVR EPG and Skin Backgrounds -->

	<!-- BACK001 - Custom variable for Blur (referenced in Includes_Actions.xml/Action_Blur_Onload) -->	
	<expression name="Exp_BlurPoster">String.Contains(Container.ViewMode,"Poster")</expression>
	<expression name="Exp_BlurThumb">Window.IsVisible(10502)</expression>
	<expression name="Exp_BlurFanart">String.Contains(Container.ViewMode,"Landscape")</expression>	
	<variable name="Custom_SourceImage">
	    <value condition="$EXP[Exp_BlurPoster]">Art(poster)</value>
		<value condition="$EXP[Exp_BlurThumb]">Art(thumb)</value>
		<value condition="$EXP[Exp_BlurFanart]">Art(fanart)</value>
	</variable>

</includes>
