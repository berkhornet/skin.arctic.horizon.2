<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- START Expressions and Variables for PVR EPG and Skin Backgrounds -->
	
	
	<!-- EPG CHANNEL ICONS AND PROGRAM ARTWORK EXPRESSIONS & VARIABLES -->
	<!-- Expressions for Channel Icon variable (ImagePVREPGIcon) and EPG Artwork variable (ImagePVRArtwork) -->
	<expression name="StandardChannel">Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,499)</expression>
	<expression name="LiveFootballAnova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,501) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,592)</expression>
	<expression name="LiveEPLAnova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,501) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,520)</expression>
	<expression name="LiveEFLCAnova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,521) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,544)</expression>
	<expression name="LiveEFL1Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,545) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,568)</expression>
	<expression name="LiveEFL2Anova">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,569) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,592)</expression>
	<expression name="LiveFootballFHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,699)</expression>
	<expression name="LiveEPLFHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EPL ")</expression>
	<expression name="LiveEFLCFHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EFL ") + String.Contains(ListItem.ChannelName,"(CH)")</expression>
	<expression name="LiveEFL1FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EFL ") + String.Contains(ListItem.ChannelName,"(L1)")</expression>
	<expression name="LiveEFL2FHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE EFL ") + String.Contains(ListItem.ChannelName,"(L2)")</expression>
	<expression name="LiveSPFLFHNatho">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,601) + String.Contains(ListItem.ChannelName,"LIVE: SPFL ")</expression>
	<!-- Channel Icon variable -->
	<variable name="ImagePVREPGIcon">
		<value condition="$EXP[StandardChannel]">$INFO[ListItem.Icon]</value>				
		<value condition="$EXP[LiveEPLAnova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EPL.png</value>
		<value condition="$EXP[LiveEFLCAnova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL C.png</value>
		<value condition="$EXP[LiveEFL1Anova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L1.png</value>
		<value condition="$EXP[LiveEFL2Anova]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L2.png</value>
		<value condition="$EXP[LiveEPLFHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EPL.png</value>
		<value condition="$EXP[LiveEFLCFHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL C.png</value>
		<value condition="$EXP[LiveEFL1FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L1.png</value>
		<value condition="$EXP[LiveEFL2FHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL L2.png</value>
		<value condition="$EXP[LiveSPFLFHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE SPFL.png</value>
		<value condition="$EXP[LiveFootballFHNatho]">special://userdata/customisations\PVR\PVR Logo Pack\LIVE EFL.png</value>		
		<value>$INFO[ListItem.Icon]</value>
	</variable>
	<!-- PVR EPG Artwork variable -->
	<variable name="ImagePVRArtwork">
		<value condition="$EXP[StandardChannel] + !Player.HasMedia">$INFO[Window(Home).Property(SkinHelper.ListItem.Art.Thumb)]</value>
		<value condition="$EXP[LiveFootballAnova] + !Player.HasMedia">$INFO[ListItem.Icon]</value>			
		<value condition="$EXP[LiveEPLAnova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EPL.jpg</value>
		<value condition="$EXP[LiveEFLCAnova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[LiveEFL1Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[LiveEFL2Anova] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>	
		<value condition="$EXP[LiveEPLFHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EPL.jpg</value>
		<value condition="$EXP[LiveEFLCFHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[LiveEFL1FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[LiveEFL2FHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>
		<value condition="$EXP[LiveSPFLFHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\SPFL.jpg</value>	
		<value condition="$EXP[LiveFootballFHNatho] + !Player.HasMedia">special://userdata/customisations\PVR\EPG Artwork\EFL.jpg</value>		
		<value condition="!Player.HasMedia">$INFO[ListItem.Icon]</value>
	</variable>
	
	<!-- EPG CHANNEL RESOLUTION EXPRESSIONS & VARIABLES -->
	<!-- Expressions for Channel Resolution Icon variable (ImageChannelResolutionIcon) -->
	<expression name="FHDChannel">String.Contains(ListItem.ChannelName," FHD")</expression>
	<expression name="HDChannel">String.Contains(ListItem.ChannelName," HD")</expression>
	<expression name="SDChannel">String.Contains(ListItem.ChannelName," SD")</expression>
	<!-- Channel Resolution Icon variable -->
	<variable name="ImagePVRChannelResolutionIcon">
		<value condition="$EXP[FHDChannel]">special://userdata/customisations\Skin Customisations\PVR\resolution flags\fhd.png</value>
		<value condition="$EXP[HDChannel]">special://userdata/customisations\Skin Customisations\PVR\resolution flags\hd.png</value>
		<value condition="$EXP[SDChannel]">special://userdata/customisations\Skin Customisations\PVR\resolution flags\sd.png</value>
		<value></value>
	</variable>
	
	<!-- EPG PROGRAM INFORMATION AND PLOT EXPRESSIONS & VARIABLES -->
	<!-- For live football channels, display channel name instead of program information -->
	<!-- PVR EPG Program Info variable -->
	<variable name="TextPVREPGProgramInfo">
		<value condition="$EXP[StandardChannel]">$INFO[ListItem.Label]</value>
		<value condition="$EXP[LiveFootballAnova]">$INFO[ListItem.ChannelName] - Live Games</value>
		<value condition="$EXP[LiveFootballFHNatho]">$INFO[ListItem.ChannelName]</value>
		<value>$INFO[ListItem.Label]</value>
	</variable>
	<!-- PVR EPG Program Plot variable -->
	<variable name="TextPVREPGProgramPlot">
		<value condition="$EXP[StandardChannel]">$VAR[Label_Plot]</value>
		<value condition="$EXP[LiveEPLAnova]">Live football from the English Premier League featuring $INFO[ListItem.ChannelName].</value>
		<value condition="$EXP[LiveEFLCAnova]">Live football from the English Football League Championship featuring $INFO[ListItem.ChannelName].</value>
		<value condition="$EXP[LiveEFL1Anova]">Live football from the English Football League 1 featuring $INFO[ListItem.ChannelName].</value>
		<value condition="$EXP[LiveEFL2Anova]">Live football from the English Football League 2 featuring $INFO[ListItem.ChannelName].</value>
		<value condition="$EXP[LiveEPLFHNatho]">Live football from the English Premier League.</value>
		<value condition="$EXP[LiveEFLCFHNatho]">Live football from the English Football League (Championship).</value>
		<value condition="$EXP[LiveEFL1FHNatho]">Live football from the English Football League (League 1).</value>
		<value condition="$EXP[LiveEFL2FHNatho]">Live football from the English Football League (League 2).</value>
		<value condition="$EXP[LiveSPFLFHNatho]">Live football from the Scottish Professional Football League.</value>
		<value condition="$EXP[LiveFootballFHNatho]">Live football from the English Football League.</value>
		<value>$INFO[ListItem.Label]</value>
	</variable>
	
	<!-- EPG CHANNEL PROVIDER ICONS EXPRESSIONS & VARIABLES -->
	<!-- Expressions for Channel Provider variable (ImagePVRProviderIcon) -->
	<expression name="FHNathoChannel">Integer.IsLess(ListItem.ChannelNumberLabel,200) | Integer.IsGreater(ListItem.ChannelNumberLabel,599) </expression>
	<expression name="AnovaChannel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,201) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,599) </expression>
	<expression name="BBCChannel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,401) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,406) </expression>
	<expression name="CUTVChannel">Integer.IsGreaterOrEqual(ListItem.ChannelNumberLabel,407) + Integer.IsLessOrEqual(ListItem.ChannelNumberLabel,499) </expression>	
	<!-- PVR Channel Provider variable (Icon) -->
	<variable name="ImagePVRProviderIcon">
		<value condition="$EXP[FHNathoChannel]">special://userdata/customisations\Addon Icons\FHNatho.png</value>
		<value condition="$EXP[BBCChannel]">special://userdata/customisations\Addon Icons\BBC iPlayer New.png</value>
		<value condition="$EXP[CUTVChannel]">special://userdata/customisations\Addon Icons\CUTV.png</value>
		<value condition="$EXP[AnovaChannel]">special://userdata/customisations\Addon Icons\Anova.png</value>
		<value>special://userdata/customisations\Skin Customisations\PVR\provider icons\NoProvider.png</value>
	</variable>
	<!-- Alternative PVR Channel Provider variable (Fanart)-->
	<!-- variable name="ImagePVRProviderIcon">
		<value condition="$EXP[FHNathoChannel]">special://userdata/customisations\Addon Fanart\FHNatho.jpg</value>
		<value condition="$EXP[BBCChannel]">special://userdata/customisations\Addon Fanart\BBC iPlayer New.png</value>
		<value condition="$EXP[CUTVChannel]">special://userdata/customisations\Addon Fanart\CUTV.jpg</value>
		<value condition="$EXP[AnovaChannel]">special://userdata/customisations\Addon Fanart\Anova.png</value>
		<value>special://userdata/customisations\Addon Fanart\NoProvider.png</value>
	</variable -->
	
	<!-- SKIN BACKGROUNDS EXPRESSIONS & VARIABLES -->
	<!-- Expressions for Skin Background variable (ImageSkinBackground) -->
	<expression name="Exp_HomeWindow">Window.IsVisible(Home) | Window.IsVisible(11114)</expression>
	<!-- MyPVRChannels.xml (10700), MyPVRRecordings.xml (10701), MyPVRGuide.xml (10702), MyPVRGuide.xml (10703), MyPVRSearch.xml (10704) -->
	<expression name="Exp_PVRWindow">Window.IsVisible(10700) | Window.IsVisible(10701) | Window.IsVisible(10702) | Window.IsVisible(10703) | Window.IsVisible(10704)</expression>
	<!-- MyVideoNav.xml (10025), MyPlaylist.xml (10028) -->
	<expression name="Exp_VideoWindow">Window.IsVisible(10025) | Window.IsVisible(10028)</expression>
	<!-- MyMusicNav.xml (10502), MyMusicPlaylistEditor.xml (10503), MyPlayList.xml (10500) -->
	<expression name="Exp_MusicWindow">Window.IsVisible(10502) | Window.IsVisible(MyMusicPlaylistEditor) | Window.IsVisible(10500)</expression>
	<expression name="Exp_WeatherWindow">Window.IsVisible(MyWeather)</expression>
	<!-- FileManager.xml (10003), Settings.xml (10004), SettingsSystemInfo.xml (10007), SettingsSystemInfo.xml (10016) -->
	<!-- SettingsCategory.xml (10018, 10021, 10022, 10030, 10031, 10032, 10034, 10035), AddonBrowser.xml (10040), EventLog.xml (10050) -->
	<!-- FileBrowser.xml (10026) -->
	<expression name="Exp_SystemWindow">Window.IsVisible(10003) | Window.IsVisible(10004) | Window.IsVisible(10007) | Window.IsVisible(10016) | Window.IsVisible(10018) | Window.IsVisible(10021) | Window.IsVisible(10022) | Window.IsVisible(10030) | Window.IsVisible(10031) | Window.IsVisible(10032) | Window.IsVisible(10034) | Window.IsVisible(10035) | Window.IsVisible(10040) | Window.IsVisible(10050) | Window.IsVisible(10126)</expression>

	<!-- Skin Background variable -->
	<variable name="ImageSkinBackground">
		<value condition="$EXP[Exp_HomeWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Home.jpg</value>
		<value condition="$EXP[Exp_PVRWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\PVR.png</value>
		<value condition="$EXP[Exp_VideoWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Video.jpg</value>
		<value condition="$EXP[Exp_MusicWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Music.jpg</value>
		<value condition="$EXP[Exp_WeatherWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\Weather.jpg</value>
		<value condition="$EXP[Exp_SystemWindow]">special://userdata/customisations\Skin Customisations\AH2 Backgrounds\System.png</value>
		<value>special://userdata/customisations\Skin Images\AH2 Backgrounds\Fallback.jpg</value>
	</variable>
	<!-- END Expressions and Variables for PVR EPG and Skin Backgrounds -->

</includes>
