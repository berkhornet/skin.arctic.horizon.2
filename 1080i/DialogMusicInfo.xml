<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <include content="Object_DefaultControl" condition="!Skin.HasSetting(DialogInfo.FocusButtons)">
        <param name="always">true</param>
        <param name="defaultcontrol">5000</param>
    </include>
    <include content="Object_DefaultControl" condition="Skin.HasSetting(DialogInfo.FocusButtons)">
        <param name="always">true</param>
        <param name="defaultcontrol">4000</param>
    </include>
    <menucontrol>4000</menucontrol>
    <controls>

        <include>Info_Title_Label_Hidden</include>

        <!-- Button Group -->
        <include content="DialogInfo_ButtonGroup">
            <param name="include">Items_DialogMusicInfo_MenuBar</param>
        </include>
        <include>DialogInfo_ButtonHidden</include>

        <include content="DialogInfo_MainGroup">
            <include content="DialogInfo_LeftGroup">
                <param name="height">infodialog_poster_w</param>
                <param name="diffuse">diffuse/square_w480_h480.png</param>
                <include content="DialogInfo_PullTab">
                    <centertop>280</centertop>
                </include>
                <include>DialogInfo_MusicArt</include>
            </include>
            <include content="DialogInfo_RightGroup">
                <!-- Info -->
                <control type="group">
                    <visible>!Control.HasFocus(7001) | !Player.HasVideo</visible>
                    <visible>!Control.HasFocus(7003)</visible>

                    <animation effect="fade" start="0" end="100" time="400" delay="400" reversible="false">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="200" reversible="false">Hidden</animation>


                    <control type="group">
                        <visible>!Control.HasFocus(61)</visible>

                        <!-- Music Info -->
                        <include content="Info_Panel">
                            <param name="plotheight" value="info_plot_large_h" />
                            <param name="plotwidth" value="info_plot_w" />
                        </include>

                        <!-- Track Details -->
                        <include content="DialogInfo_MusicTracks" condition="String.IsEqual(ListItem.DBType,album)">
                            <param name="id">50</param>
                        </include>
                        <include content="DialogInfo_MusicTracks" condition="String.IsEqual(ListItem.DBType,artist)">
                            <param name="id">5050</param>
                            <param name="detailed">true</param>
                            <content target="music" sortby="playcount" sortorder="descending">$INFO[ListItem.Artist,musicdb://songs/?xsp=%7B%22order%22%3A%7B%22direction%22%3A%22ascending%22%2C%22ignorefolders%22%3A0%2C%22method%22%3A%22sorttitle%22%7D%2C%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22artist%22%2C%22operator%22%3A%22is%22%2C%22value%22%3A%5B%22,%22%5D%7D%5D%7D%2C%22type%22%3A%22songs%22%7D]</content>
                        </include>
                    </control>
                </control>

                <!-- Trailer and Plot -->
                <include>DialogInfo_VideoTrailer</include>
                <include content="DialogInfo_PlotBox">
                    <param name="label">$VAR[Label_Plot]</param>
                </include>
                <include>DialogInfo_ArtworkGallery</include>

            </include>
        </include>


        <include content="DialogInfo_Furniture">
            <param name="downarrow_visible">true</param>
        </include>

        <include content="Object_Options_Menu">
            <param name="grouplist_items" value="Items_DialogMusicInfo_Options" />
            <param name="visible" value="!$EXP[Exp_OverlayDialogs]" />
            <param name="onback" value="5000" />
            <param name="usemousefocus">true</param>
        </include>

        <include>DialogInfo_VideoTrailerFullscreen</include>

        <include content="Object_Hidden_Button">
            <param name="id">7002</param>
            <onfocus condition="String.IsEqual(ListItem.DBType,artist)">SetFocus(6000)</onfocus>
            <onfocus condition="!String.IsEqual(ListItem.DBType,artist)">Close</onfocus>
            <onfocus condition="!String.IsEqual(ListItem.DBType,artist)">SendClick(12)</onfocus>
        </include>

        <include>DialogInfo_FilePathInfo</include>


        <!-- Albums -->
        <control type="group">
            <animation type="Conditional" reversible="false" condition="ControlGroup(6000).HasFocus()">
                <effect type="fade" start="0" end="100" delay="400" time="400" tween="sine" easing="out"/>
                <effect type="slide" start="0,320" end="0" delay="400" time="400" tween="cubic" easing="out" />
            </animation>
            <animation type="Conditional" reversible="false" condition="!ControlGroup(6000).HasFocus()">
                <effect type="fade" start="100" end="0" time="400" tween="sine" easing="out" />
                <effect type="slide" start="0" end="0,320" time="400" tween="cubic" easing="out" />
            </animation>
            <control type="grouplist" id="6000">
                <onup>5000</onup>
                <ondown>330</ondown>
                <animation type="Conditional" condition="Control.IsVisible(330)" reversible="false">
                    <effect type="slide" end="0,-20" time="60" tween="sine" />
                    <effect type="slide" end="0,20" time="180" tween="sine" delay="80" />
                </animation>
                <orientation>vertical</orientation>
                <control type="group" id="6100">
                    <height>widget_tbump_h</height>
                </control>
                <include content="Widget_Poster" condition="String.IsEqual(ListItem.DBType,artist)">
                    <param name="groupid" value="5100" />
                    <param name="id" value="50" />
                    <param name="label" value="$LOCALIZE[132]" />
                    <param name="visible" value="true" />
                    <param name="include" value="List_Square_Row" />
                    <onback>5000</onback>
                </include>
                <control type="group" id="6200">
                    <top>-440</top>
                    <height>0</height>
                    <control type="group">
                        <visible>!Integer.IsEqual(Container(6201).NumItems,0)</visible>
                        <height>280</height>
                        <left>40</left>
                        <right>40</right>
                        <include>Object_ItemBack</include>
                    </control>
                </control>
                <include content="List_Button_Wall" condition="String.IsEqual(ListItem.DBType,artist)">
                    <param name="id" value="6201" />
                    <param name="detailed" value="false" />
                    <param name="item_h" value="80" />
                    <param name="itemlayout_h" value="120" />
                    <param name="item_w" value="410" />
                    <param name="itemlayout_w" value="450" />
                    <param name="offset_y">40</param>
                    <param name="offset_x">40</param>
                    <param name="orientation">vertical</param>
                    <content target="music">musicdb://songs/?xsp={"rules":{"and":[{"field":"album","operator":"is","value":["$INFO[Container(50).ListItem.Label]"]}]},"type":"songs"}</content>
                    <onback>5000</onback>
                    <height>280</height>
                    <top>0</top>
                    <left>40</left>
                    <right>40</right>
                    <preloaditems>0</preloaditems>
                </include>
            </control>
            <include content="Object_WallFade">
                <param name="id" value="6000" />
            </include>
        </control>

        <control type="group">
            <visible>!Integer.IsEqual(Container(6201).NumItems,0)</visible>
            <visible>ControlGroup(6000).HasFocus()</visible>
            <left>view_pad</left>
            <right>view_pad</right>
            <bottom>view_pad</bottom>
            <animation effect="fade" start="0" end="100" delay="0" time="400" reversible="false">Visible</animation>
            <animation effect="fade" start="100" end="0" delay="400" time="400" reversible="false">Hidden</animation>
            <height>40</height>
            <include content="Info_Codec_LabelIcon">
                <param name="icon" value="special://skin/extras/icons/songs.png" />
            </include>
            <include content="Info_Codec_LabelLabel">
                <left>60</left>
                <label>$INFO[Container(50).ListItem.Label,[B],[/B]]$INFO[Container(50).ListItem.Label2, (,) ]$INFO[Container(6201).NumNonFolderItems, â€¢ , $LOCALIZE[134]]</label>
            </include>
        </control>

    </controls>
</window>